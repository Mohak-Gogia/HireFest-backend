
@{
    ViewBag.Title = "HireFest Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    
</head>
<body>
    <section class="w3l-hotair-form">
        <h1>HireFest Login</h1>
        <div class="container">
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2>Candidate Log In</h2>
                        <form action="@Url.Action("Login", "Auth")" method="post">
                            <input type="email" class="email" name="email" placeholder="Email Id" required="" autofocus>
                            <input type="password" class="password" name="password" placeholder="Password" required="" autofocus>
                            <button class="btn" type="submit">Log In</button>
                        </form>

                        <p class="account">Don't have an account? <a href="Auth/Signup">Register</a></p>
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/Images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        if ('@ViewBag.ErrorMessage' != "")
            alert('@ViewBag.ErrorMessage');
    </script>
</body>
</html>
